{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@calories/api/auth": ["libs/api/auth/src/index.ts"],
      "@calories/api/food": ["libs/api/food/src/index.ts"],
      "@calories/api/users": ["libs/api/users/src/index.ts"],
      "@calories/client/auth": ["libs/client/auth/src/index.ts"],
      "@calories/client/auth/pages/*": ["libs/client/auth/src/lib/pages/*"],
      "@calories/utils": ["libs/utils/src/index.ts"],
      "@calories/utils/types": ["libs/utils/src/lib/types"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
